{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport 'bootstrap/dist/css/bootstrap.css';\nexport default {\n  name: 'ComponentOne',\n  data() {\n    return {\n      drinkItems: [],\n      foodItems: [],\n      selectedCategory: 'Drink',\n      categories: ['Food', 'Drink'],\n      currentPage: 1,\n      itemsPerPage: 6,\n      searchQuery: '',\n      priceSort: null,\n      // Default price sort option\n      priceSortOptions: ['Lowest to Highest', 'Highest to Lowest'],\n      newReview: ''\n    };\n  },\n  computed: {\n    filteredItems() {\n      // Filter items based on search query and selected category\n      let filteredItems = this.filteredByCategory.filter(item => item.title.toLowerCase().includes(this.searchQuery.toLowerCase()));\n\n      // Sort items by price if priceSort option is selected\n      if (this.priceSort === 'Lowest to Highest') {\n        filteredItems.sort((a, b) => a.price - b.price);\n      } else if (this.priceSort === 'Highest to Lowest') {\n        filteredItems.sort((a, b) => b.price - a.price);\n      }\n      return filteredItems;\n    },\n    filteredByCategory() {\n      // Filter items based on selected category\n      return this.selectedCategory === 'Drink' ? this.drinkItems : this.foodItems;\n    },\n    pageCount() {\n      return Math.ceil(this.filteredItems.length / this.itemsPerPage);\n    }\n  },\n  mounted() {\n    this.loadMenuItems();\n  },\n  methods: {\n    loadMenuItems() {\n      this.foodItems = require('@/assets/food.json');\n      this.drinkItems = require('@/assets/drink.json');\n    },\n    setCurrentPage(page) {\n      this.currentPage = page;\n    },\n    filterItems() {\n      // Triggered when user types in the search bar\n      // Automatically re-renders the displayed items\n      this.currentPage = 1; // Reset current page to 1 when filtering\n    },\n\n    clearFilters() {\n      // Reset all filter values to their default states\n      this.selectedCategory = 'Drink';\n      this.searchQuery = '';\n      this.priceSort = null;\n    },\n    addReview(item) {\n      // Add a new review to the selected item\n      if (this.newReview.trim() !== '') {\n        item.reviews.push({\n          text: this.newReview,\n          rating: 0\n        });\n        this.newReview = ''; // Clear the input field after adding the review\n      }\n    },\n\n    rateReview(item, idx, rating) {\n      // Set the star rating for a review\n      item.reviews[idx].rating = rating;\n    },\n    submitReview(item, idx) {\n      // Perform any necessary actions when submitting a review\n      console.log('Review submitted:', item.reviews[idx]);\n    }\n  }\n};","map":{"version":3,"names":["name","data","drinkItems","foodItems","selectedCategory","categories","currentPage","itemsPerPage","searchQuery","priceSort","priceSortOptions","newReview","computed","filteredItems","filteredByCategory","filter","item","title","toLowerCase","includes","sort","a","b","price","pageCount","Math","ceil","length","mounted","loadMenuItems","methods","require","setCurrentPage","page","filterItems","clearFilters","addReview","trim","reviews","push","text","rating","rateReview","idx","submitReview","console","log"],"sources":["/Users/admin/Documents/HDTask/Coffee/src/components/Component1.vue"],"sourcesContent":["<template>\n  <div>\n    <!-- Dropdown button for selecting food or drink -->\n    <v-card-item class=\"my-2\">\n      <v-select v-model=\"selectedCategory\" :items=\"categories\" label=\"Select Category\"></v-select>\n    </v-card-item>\n\n    <!-- Search bar input field -->\n    <v-text-field v-model=\"searchQuery\" label=\"Search\" outlined @input=\"filterItems\"></v-text-field>\n\n    <!-- Dropdown box for sorting by price -->\n    <v-card-item class=\"my-2\">\n      <v-select v-model=\"priceSort\" :items=\"priceSortOptions\" label=\"Sort by Price\" outlined></v-select>\n    </v-card-item>\n\n    <!-- Clear Filters button -->\n    <v-card-item class=\"my-2\">\n      <v-btn @click=\"clearFilters\" color=\"primary\">Clear Filters</v-btn>\n    </v-card-item>\n\n    <v-card-item>\n      <v-card-title>Menu of Maples Cafe</v-card-title>\n      <v-card-subtitle></v-card-subtitle>\n    </v-card-item>\n    \n    <v-card-item class=\"my-2\">\n      <v-sheet>\n        <div class=\"container mx-auto align-items-center\">\n          <div class=\"row\">\n            <div class=\"col-lg-4 col-md-6 col-sm-12\" v-for=\"(item, index) in filteredItems\" :key=\"index\">\n              <!-- First v-card-item for the image -->\n              <v-card-item class=\"m-4 p-2 elevation-2 custom-card\">\n                <v-img :src=\"item.image\" :alt=\"item.title\" class=\"card-image\"></v-img>\n              </v-card-item>\n\n              <!-- Second v-card-item for the title and price -->\n              <v-card-item class=\"m-4 p-2 elevation-2 custom-card\">\n                <v-card-text class=\"text-center title-text\" style=\"font-size: 24px; color: red; font-family: 'Pacifico', cursive;\">\n                  {{ item.title }} - ${{ item.price }}\n                </v-card-text>\n                <v-card-text class=\"text-center\">{{ item.description }}</v-card-text>\n              </v-card-item>\n\n              <!-- Review section -->\n              <v-card-item class=\"m-4 p-2 elevation-2 custom-card\">\n                <h3>Reviews</h3>\n                <div v-if=\"item.reviews.length === 0\">No reviews yet.</div>\n                <div v-else>\n                  <div v-for=\"(review, idx) in item.reviews\" :key=\"idx\">\n                    <div>{{ review.text }}</div>\n                    <!-- Star rating -->\n                    <div>\n                      <span v-for=\"star in 5\" :key=\"star\" @click=\"rateReview(item, idx, star)\" style=\"cursor: pointer;\">\n                        <v-icon>{{ star <= review.rating ? 'mdi-star' : 'mdi-star-outline' }}</v-icon>\n                      </span>\n                    </div>\n                    <v-btn @click=\"submitReview(item, idx)\">Submit</v-btn>\n                  </div>\n                </div>\n                <v-text-field v-model=\"newReview\" label=\"Add a review\" outlined dense @keyup.enter=\"addReview(item)\"></v-text-field>\n              </v-card-item>\n            </div>\n          </div>\n        </div>\n      </v-sheet>\n\n      <div class=\"col-md-12\">\n        <paginate\n          :page-count=\"pageCount\"\n          :click-handler=\"setCurrentPage\"\n          :page-range=\"5\"\n          :margin-pages=\"1\"\n          :prev-text=\"'Prev'\"\n          :next-text=\"'Next'\"\n          :container-class=\"'pagination'\"\n          :page-class=\"'page-item'\"\n        ></paginate>\n      </div>\n\n      <v-pagination v-model=\"currentPage\" :length=\"Math.ceil(filteredItems.length / itemsPerPage)\" @input=\"setCurrentPage\">\n      </v-pagination>\n    </v-card-item>\n  </div>\n</template>\n\n<script>\nimport 'bootstrap/dist/css/bootstrap.css';\n\nexport default {\n  name: 'ComponentOne',\n  data() {\n    return {\n      drinkItems: [],\n      foodItems: [],\n      selectedCategory: 'Drink',\n      categories: ['Food', 'Drink'],\n      currentPage: 1,\n      itemsPerPage: 6,\n      searchQuery: '',\n      priceSort: null, // Default price sort option\n      priceSortOptions: ['Lowest to Highest', 'Highest to Lowest'],\n      newReview: ''\n    };\n  },\n  computed: {\n    filteredItems() {\n      // Filter items based on search query and selected category\n      let filteredItems = this.filteredByCategory.filter(item =>\n        item.title.toLowerCase().includes(this.searchQuery.toLowerCase())\n      );\n\n      // Sort items by price if priceSort option is selected\n      if (this.priceSort === 'Lowest to Highest') {\n        filteredItems.sort((a, b) => a.price - b.price);\n      } else if (this.priceSort === 'Highest to Lowest') {\n        filteredItems.sort((a, b) => b.price - a.price);\n      }\n\n      return filteredItems;\n    },\n    filteredByCategory() {\n      // Filter items based on selected category\n      return this.selectedCategory === 'Drink' ? this.drinkItems : this.foodItems;\n    },\n    pageCount() {\n      return Math.ceil(this.filteredItems.length / this.itemsPerPage);\n    }\n  },\n  mounted() {\n    this.loadMenuItems();\n  },\n  methods: {\n    loadMenuItems() {\n      this.foodItems = require('@/assets/food.json');\n      this.drinkItems = require('@/assets/drink.json');\n    },\n    setCurrentPage(page) {\n      this.currentPage = page;\n    },\n    filterItems() {\n      // Triggered when user types in the search bar\n      // Automatically re-renders the displayed items\n      this.currentPage = 1; // Reset current page to 1 when filtering\n    },\n    clearFilters() {\n      // Reset all filter values to their default states\n      this.selectedCategory = 'Drink';\n      this.searchQuery = '';\n      this.priceSort = null;\n    },\n    addReview(item) {\n      // Add a new review to the selected item\n      if (this.newReview.trim() !== '') {\n        item.reviews.push({ text: this.newReview, rating: 0 });\n        this.newReview = ''; // Clear the input field after adding the review\n      }\n    },\n    rateReview(item, idx, rating) {\n      // Set the star rating for a review\n      item.reviews[idx].rating = rating;\n    },\n    submitReview(item, idx) {\n      // Perform any necessary actions when submitting a review\n      console.log('Review submitted:', item.reviews[idx]);\n    }\n  }\n};\n</script>\n\n<style>\n.custom-card {\n  aspect-ratio: 1 / 1;\n}\n\n@media (min-width: 600px) {\n  .row {\n    display: flex;\n    flex-wrap: wrap;\n  }\n\n  .col-md-4 {\n    flex: 0 0 33.3333%;\n    max-width: 33.3333%;\n  }\n}\n</style>\n"],"mappings":";AAsFA,OAAO,kCAAkC;AAEzC,eAAe;EACbA,IAAI,EAAE,cAAc;EACpBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,UAAU,EAAE,EAAE;MACdC,SAAS,EAAE,EAAE;MACbC,gBAAgB,EAAE,OAAO;MACzBC,UAAU,EAAE,CAAC,MAAM,EAAE,OAAO,CAAC;MAC7BC,WAAW,EAAE,CAAC;MACdC,YAAY,EAAE,CAAC;MACfC,WAAW