{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport 'bootstrap/dist/css/bootstrap.css';\nexport default {\n  name: 'ComponentOne',\n  data() {\n    return {\n      drinkItems: [],\n      foodItems: [],\n      selectedCategory: 'Drink',\n      categories: ['Food', 'Drink'],\n      currentPage: 1,\n      itemsPerPage: 6,\n      searchQuery: '',\n      priceSort: null,\n      // Default price sort option\n      priceSortOptions: ['Lowest to Highest', 'Highest to Lowest'],\n      newReview: ''\n    };\n  },\n  computed: {\n    filteredItems() {\n      // Filter items based on search query and selected category\n      let filteredItems = this.filteredByCategory.filter(item => item.title.toLowerCase().includes(this.searchQuery.toLowerCase()));\n\n      // Sort items by price if priceSort option is selected\n      if (this.priceSort === 'Lowest to Highest') {\n        filteredItems.sort((a, b) => a.price - b.price);\n      } else if (this.priceSort === 'Highest to Lowest') {\n        filteredItems.sort((a, b) => b.price - a.price);\n      }\n      return filteredItems;\n    },\n    filteredByCategory() {\n      // Filter items based on selected category\n      return this.selectedCategory === 'Drink' ? this.drinkItems : this.foodItems;\n    },\n    pageCount() {\n      return Math.ceil(this.filteredItems.length / this.itemsPerPage);\n    }\n  },\n  mounted() {\n    this.loadMenuItems();\n  },\n  methods: {\n    loadMenuItems() {\n      this.foodItems = require('@/assets/food.json');\n      this.drinkItems = require('@/assets/drink.json');\n    },\n    setCurrentPage(page) {\n      this.currentPage = page;\n    },\n    filterItems() {\n      // Triggered when user types in the search bar\n      // Automatically re-renders the displayed items\n      this.currentPage = 1; // Reset current page to 1 when filtering\n    },\n\n    clearFilters() {\n      // Reset all filter values to their default states\n      this.selectedCategory = 'Drink';\n      this.searchQuery = '';\n      this.priceSort = null;\n    },\n    addReview(item) {\n      // Add a new review to the selected item\n      if (this.newReview.trim() !== '') {\n        item.reviews.push({\n          text: this.newReview,\n          likes: 0,\n          liked: false\n        });\n        this.newReview = ''; // Clear the input field after adding the review\n      }\n    },\n\n    likeReview(item, idx) {\n      // Toggle like on a review\n      const review = item.reviews[idx];\n      if (!review.liked) {\n        review.likes++;\n      } else {\n        review.likes--;\n      }\n      review.liked = !review.liked;\n    }\n  }\n};","map":{"version":3,"names":["name","data","drinkItems","foodItems","selectedCategory","categories","currentPage","itemsPerPage","searchQuery","priceSort","priceSortOptions","newReview","computed","filteredItems","filteredByCategory","filter","item","title","toLowerCase","includes","sort","a","b","price","pageCount","Math","ceil","length","mounted","loadMenuItems","methods","require","setCurrentPage","page","filterItems","clearFilters","addReview","trim","reviews","push","text","likes","liked","likeReview","idx","review"],"sources":["/Users/admin/Documents/HDTask/Coffee/src/components/Component1.vue"],"sourcesContent":["<template>\n    <div>\n      <!-- Dropdown button for selecting food or drink -->\n      <v-card-item class=\"my-2\">\n        <v-select v-model=\"selectedCategory\" :items=\"categories\" label=\"Select Category\"></v-select>\n      </v-card-item>\n  \n      <!-- Search bar input field -->\n      <v-text-field v-model=\"searchQuery\" label=\"Search\" outlined @input=\"filterItems\"></v-text-field>\n  \n      <!-- Dropdown box for sorting by price -->\n      <v-card-item class=\"my-2\">\n        <v-select v-model=\"priceSort\" :items=\"priceSortOptions\" label=\"Sort by Price\" outlined></v-select>\n      </v-card-item>\n  \n      <!-- Clear Filters button -->\n      <v-card-item class=\"my-2\">\n        <v-btn @click